<% layout('layouts/boilerplate') %>
<div class="row cent">
    <h1 class="text-center">New Campground!!</h1>
    <div class="col-6 offser-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                    <input class= "form-control" type="text" name="campground[title]" id="title" placeholder="Title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                    <input class= "form-control" type="text" name="campground[location]" id="location" placeholder="Location">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                    <input class= "form-control" type="text" name="campground[image]" id="location" placeholder="Image URL">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="campground[price] placeholder="0.00" aria-label="price" aria-describedby="price-label">
                  </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="image">Description</label>
                <textarea class= "form-control" type="text" name="campground[description]" id="location" placeholder="Description..."></textarea>
              </div>
            <div class="mb-3">
                <button class="btn btn-success btn-lgs">Add Campground</button>
            </div>
        </form>
        <footer>
            <a href="/campgrounds">All Campgrounds </a>
        </footer>
    </div>
</div>